<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Gallery.ClickedItemEditActivity">

    <ImageButton
        android:id="@+id/ic_check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/ic_check"
        android:fontFamily="@font/binggrae"
        android:text="Date"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tvNameEdit"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/binggrae"
        android:text="Name"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinnerTag"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:entries="@array/arrayTag"
        android:fontFamily="@font/binggrae"></Spinner>


    <TextView
        android:id="@+id/friends"
        android:fontFamily="@font/binggrae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerTag"
        android:layout_marginTop="15dp"
        android:text="함께 먹은 친구"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/friend1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_border_line"
        android:fontFamily="@font/binggrae"
        android:gravity="center_vertical"
        android:text=" + "
        android:textSize="20sp" />
    <TextView
        android:id="@+id/friend2"
        android:fontFamily="@font/binggrae"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/friend1"
        android:layout_marginTop="20dp"
        android:text=" + "
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:background="@drawable/all_border_line"
        />
    <TextView
        android:id="@+id/friend3"
        android:fontFamily="@font/binggrae"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/friend2"
        android:layout_marginTop="20dp"
        android:text=" + "
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:background="@drawable/all_border_line"
        />
    <TextView
        android:id="@+id/friend4"
        android:fontFamily="@font/binggrae"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/friend3"
        android:layout_marginTop="20dp"
        android:text=" + "
        android:visibility="invisible"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:background="@drawable/all_border_line"
        />

</RelativeLayout>